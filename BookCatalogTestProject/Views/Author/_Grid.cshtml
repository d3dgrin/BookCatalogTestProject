<div class="portlet box" id="authors_grid">
    <div class="portlet-title nmn-bg-color-blue">
        <button type="button" class="btn btn-default" aria-label="Left Align" data-bind="click: AddClick">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
    </div>
    <div id="authors_grid_body" class="portlet-body">
        <div class="table-container">
            <table id="authors_data_table" class="table">
                <thead>
                    <tr role="row" class="heading">
                        <th class="text-center">Id</th>
                        <th class="text-center">Name</th>
                        <th class="text-center">Surname</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody id="authors_tbody"></tbody>
            </table>
        </div>
    </div>
</div>
